
@{
    ViewBag.Title = "gameBoard";
}

<h2>gameBoard</h2>

@using (Html.BeginForm("HandleCellClick", "Game"))
{

    for (int i = 0; i < Model.Size; i++)
    {
        for (int j = 0; j < Model.Size; j++)
        {




        <button type="submit" name="cell" value="@i,@j">
            @if (Model.Grid[i,j].Visited == false)
            {
                <p>?</p>
            }

            else if (Model.Grid[i, j].liveNeighbors == 0)
            {
                <p>-</p>
            }

            else
            {
                <p>@Model.Grid[i,j].liveNeighbors </p>

            }
        </button>
        }
        <br />
    }
}

