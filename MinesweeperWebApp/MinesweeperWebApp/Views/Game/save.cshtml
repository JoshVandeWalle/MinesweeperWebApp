@model bool
@{
    ViewBag.Title = "Save Game";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

</head>

<body>
    <br />
    <div>
        @if (Model == true)
        {
            <p>The game was saved successfully</p>
        }

        else
        {
            <p>There was a problem saving the game</p>
        }

        <br /> 
        @using (Html.BeginForm("HandleDifficultyScreenDisplay", "Account"))
        {
            <button type="submit" name="save">Go Back</button>
        }
    </div>
</body>



