
@{
    ViewBag.Title = "loginSuccess";
}

<h2>Login Success</h2>

@if (Model != null)
{
    if (Model is Boolean)
    {
        if (Model == true)
        {
            <p>The game was saved successfully!</p>
        }

        else
        {
            <p>There was an error saving the game.</p>
        }
    }
}

@using (Html.BeginForm("StartGame", "Game"))
{
    @Html.AntiForgeryToken();

    @Html.RadioButton("difficulty", 0, false);
    @Html.Label("Easy");<br />
    @Html.RadioButton("difficulty", 1, true);
    @Html.Label("Normal");<br />
    @Html.RadioButton("difficulty", 2, false);
    @Html.Label("Hard");<br />

    <br />


    <input type="submit" id="SubmitButton" value="Play Game" />
}

